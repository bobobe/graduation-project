<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AllBack">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_width="195px"
            android:layout_height="wrap_content"
            android:id="@+id/btn_share_dir"
            android:text="共享目录"/>
        <Button
            android:layout_width="195px"
            android:layout_height="wrap_content"
            android:id="@+id/btn_send_file"
            android:text="发送文件"/>
        <Button
            android:layout_width="195px"
            android:layout_height="wrap_content"
            android:id="@+id/btn_rec_file"
            android:text="接收文件"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clear"
            android:text="清屏"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ScrollView
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:layout_margin="10px"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10px"
            android:background="@color/AllBack">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="800px"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="400px"
                    android:layout_height="match_parent"
                    android:hint="请输入信息"
                    android:id="@+id/mess"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_send_mess"
                    android:text="发送"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>